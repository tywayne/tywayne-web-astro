---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Ty Carlson', description = 'Personal website of Ty Carlson' } = Astro.props;
const pageTitle = title === 'Ty Carlson' ? title : `${title} | Ty Carlson`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="/rss.xml" />
    <title>{pageTitle}</title>
  </head>
  <body>
    <div class="min-h-screen flex flex-col justify-between">
      <Header currentPath={Astro.url.pathname} />
      <main class="px-[5%] md:max-w-[64ch] mb-[15vh] min-h-[40vh]">
        <slot />
      </main>
      <Footer client:load />
    </div>
  </body>
</html>

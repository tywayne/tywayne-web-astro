---
import { getCollection } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";
import PhotographySection from "@/components/PhotographySection.astro";

const posts = (await getCollection("photography", ({ data }) => data.published)).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);

const title = "Photography";
const description = "Be forewarned, I'm an amateur photographer at best.";
---

<BaseLayout title={title} description={description}>
  <PhotographySection posts={posts} isStandalonePage />
</BaseLayout>

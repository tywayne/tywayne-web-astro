---
import { twMerge } from "tailwind-merge";

interface Props {
  currentPath: string;
}

interface NavLink {
  url: string;
  label: string;
}

const { currentPath } = Astro.props;

// Navigation links (currently empty, uncomment to enable)
const mainNavLinks: NavLink[] = [
  // { url: '/blog', label: 'blog' },
  // { url: '/reading', label: 'reading' },
  // { url: '/photography', label: 'photography' },
];

const isSelected = (url: string) => {
  if (url === "/") return currentPath === "/";
  return currentPath.startsWith(url);
};
---

<nav class="relative mb-[15vh] px-[5%]">
  <ul class="m-0 p-0 list-none flex justify-end items-center">
    <li class="grow m-0 mt-6 p-0">
      <a
        href="/"
        class={twMerge(
          "inline-block p-2 no-underline shadow-none text-foreground text-sm md:text-base font-normal transition-colors duration-200",
          "hover:opacity-100 hover:shadow-[0_2px_0_0_var(--color-foreground)]",
          "focus-visible:outline-dotted focus-visible:outline-1 focus-visible:outline-foreground",
          isSelected("/") && "shadow-[0_2px_0_0_var(--color-foreground)] font-bold",
        )}
      >
        {"//"}
      </a>
    </li>
    {
      mainNavLinks.map((link) => (
        <li class="mt-6 last:mr-0 p-0">
          <a
            href={link.url}
            class={twMerge(
              "inline-block p-2 no-underline shadow-none text-foreground text-sm md:text-base font-normal transition-colors duration-200",
              "hover:opacity-100 hover:shadow-[0_2px_0_0_var(--color-foreground)]",
              "focus-visible:outline-dotted focus-visible:outline-1 focus-visible:outline-foreground",
              isSelected(link.url) && "shadow-[0_2px_0_0_var(--color-foreground)] font-bold",
            )}
          >
            {link.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
